@model MyHardware.ViewModel.ProductViewModel

<form method="post">
  <div class="border p-3 mt-5">
    <div class="row pb-2">
      <h2 class="text-primary ml-3">Criar Fornecedor</h2>
    </div>
    <div class="row mt-3">
      <div class="col-sm-5">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" required placeholder="Digite o nome do fornecedor" class="form-control" />
      </div>
      <div class="col-sm-5">
        <label>Tipo Produto</label>
        <select asp-for="ProductType" class="form-control" asp-items="@ViewBag.ProductType">
          <option value="">(Nenhum)</option>
        </select>
      </div>
      <div class="form-group col-sm-2">
        <label for="Active">Ativo ?</label>
        <div class="switch-button switch-button-lg">
          <input type="checkbox" name="Active" id="Active" value="1" ><span><label for="Active"></label></span>
          @*@Html.Raw(Model.IsActive ? "checked" : "")*@
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5 mt-3">
        <label asp-for="Quantity">Quantidade</label>
        <input asp-for="Quantity" required placeholder="informe a quantidade do produto" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
      </div>
      <div class="col-sm-5 mt-3">
        <label asp-for="Price">Preço</label>
        <input asp-for="Price" required placeholder="informe o preço do produto" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 mt-3">
        <label asp-for="Description">Descrição do Produto</label>
        <textarea asp-for="Description" required placeholder="Informe a descrição do produto" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
    </div>
    <div class="text-end mt-4">
      <button type="submit" class="btn btn-outline-primary" style="width:150px">Criar</button>
      <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark" style="width:150px">Cancelar</a>
    </div>
  </div>
</form>
@section Scripts{
  @{
    <script type='text/javascript'>
      $(function () {
          productForm.init();
      });
    </script>
    <partial name="_Notification" />
    <partial name="_ValidationScriptsPartial" />
  }
  }